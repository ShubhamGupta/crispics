<p id="notice"><%= notice %></p>
<h1>Your Albums : </h1>

<table>
  <tr>
  	<th>Title</th>
    <th>Actions</th>
  </tr>

<% @albums.each do |album| %>
  <tr>
  	<td><%= album.title %>
    <td><%= link_to 'Show', album %>|
    <%= link_to 'Edit ', edit_album_path(album) %>|
    <%= link_to 'Destroy', album, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<h1><%= @album.title %> &nbsp;&gt;&gt;&nbsp; Photos</h1>
<% @album.photos.each do |photo| %>
	<div class = 'present_image'>
		<%= image_tag photo.pic(:thumb) %>
		<%= link_to "View", album_photo_path(@album,photo)%>
		<%= link_to "Remove From Album", album_photo_path(@album,photo),:method =>:delete, confirm: 'Are you sure?', remote: true%>
		<% if photo.tags.length > 0 %>
		Tags : 
		<% photo.tags.each do |tag|%>
			<%= "#{tag.name}  "%>
		<% end %>
		<% end %>
		<br><br>
	</div>
<% end %>
<hr/>

<%= link_to "Back To Albums", albums_path %>
